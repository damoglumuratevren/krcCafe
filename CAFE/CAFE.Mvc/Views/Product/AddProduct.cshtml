@model CAFE.Entity.Concrete.ProductEn.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ürün Ekleme</h2>
@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cat, new { @class="form-control"})
    @*@Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryId)*@
    <br />

    @Html.Label("Ürün  Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ProductName)
    <br />

    @Html.Label("Ürün  fiyatı")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Price)
    <br />

    @Html.Label("Ürün  resmi")
    @Html.TextBoxFor(x => x.ImagePath, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ImagePath)
    <br />
    <button class="btn btn-info">Ekle</button>
</div>
}
