@using CAFE.Entity.Concrete.ProductEn
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Ürün Adı</th>
        <th>Price</th>
        <th>Ürün Resmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.ProductId</td>
    <td>@item.Category.CategoryName</td>
    <td>@item.ProductName</td>
    <td>@item.Price</td>
    <td><img src="@item.ImagePath"  with="100" height="100" /> </td>
    <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Product/EditProduct/@item.ProductId" class="btn btn-warning">Güncelle</a></td>
</tr>
    }

</table>
<br />
<a href="/Product/AddProduct" class="btn btn-info">Yeni Ürün ekle</a>
